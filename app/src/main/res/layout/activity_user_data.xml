<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UserDataActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Data"
            android:textSize="35sp"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="150dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/u_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="text"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/u_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="phone"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/u_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="text"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/u_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="textWebEmailAddress"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/u_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passowrd"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="textWebPassword"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/u_bdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Birthdate"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="date"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/u_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="text"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/u_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Country"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="date"
            android:textColor="@color/colorAccent" />


        <EditText
            android:id="@+id/u_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pincode"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="number"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/u_profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Profession"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:inputType="text"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/submit_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Submit"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="serif"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>